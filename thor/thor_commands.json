	"All options": {
		"prefix": "thor-all",
		"body": [
			"desc \"command PARAM\", \"description for the command\"",
			"option :option,",
			"\t:banner => \"UPCASE\"",
			"\t:aliases => [\"-h, -al, -a, -df\"],",
			"\t:required => true,",
			"\t:type => boolean,",
			"\t:type => numeric,",
			"\t:type => array,",
			"\t:type => hash,",
			"\t:type => string,",
			"\t:desc => \"description\",",
			"def command(param),",
			"\t#TODO",
			"end",
		],
		"description": "All options reference"
	},

